<!-- Register Form -->
<div class="flex justify-center items-center h-screen">

  <form
    id="register-form"
    class="w-96 p-6 shadow-lg bg-white rounded-md text-slate-600"
  >
    <h1 class="font-bold text-center text-2xl text-gray-600">Registration</h1>

    <div class="mt-3">
      <label for="register-first-name" class="block text-base mb-2">First Name</label>
      <input
        type="text"
        id="register-first-name"
        name="firstname"
        placeholder="Enter your first name"
        class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-500"
      />
    </div>

    <div class="mt-3">
      <label for="register-last-name" class="block text-base mb-2">Last Name</label>
      <input
        type="text"
        id="register-last-name"
        name="lastname"
        placeholder="Enter your last name"
        class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-500"
      />
    </div>

    <div class="mt-3">
      <label for="register-display-name" class="block text-base mb-2">Display
        Name</label>
      <input
        type="text"
        id="register-display-name"
        name="displayname"
        placeholder="Enter your display name"
        class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-500"
      />
    </div>

    <div class="mt-3">
      <label for="register-email" class="block text-base mb-2">Email</label>
      <input
        type="email"
        id="register-email"
        name="email"
        placeholder="Enter you Email"
        class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-500"
      />
    </div>

    <div class="mt-3">
      <label
        for="register-password"
        class="block text-base mb-2"
      >Password</label>
      <input
        type="password"
        id="register-password"
        name="password"
        placeholder="Enter your Password"
        class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-500"
      />
    </div>

    <div class="mt-3">
      <label
        for="register-confirm-passwrod"
        class="block text-base mb-2"
      >Confirm Password</label>
      <input
        type="password"
        id="register-confirm-password"
        name="confirm-password"
        placeholder="Confirm your Password"
        class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-500"
      />
    </div>

    <!-- Submit for register button -->
    <div class="mt-3">
      <button
        class="text-zinc-300 bg-slate-700 w-full border-2 border-slate-700 rounded-lg hover:bg-transparent hover:font-extrabold hover:text-slate-700"
        type="submit"
      >Register</button>
    </div>
  </form>
</div>