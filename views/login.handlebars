  <div class="">
    <div class="flex justify-center items-center h-screen text-slate-700">

      <!-- Login Form -->
      <form class="w-96 p-6 shadow-lg bg-white rounded-md">
        <h1 class="font-bold text-center text-2xl text-gray-600">
          <i class="fa-solid fa-medal" style="color: #050505;"></i>
          Login
          <i class="fa-solid fa-medal" style="color: #050505;"></i>
        </h1>

        <!-- Username Area -->
        <div class="mt-4">
          <label for="username" class="block text-base mb-2">Username:</label>
          <br />
          <input
            id="username"
            type="text"
            placeholder="Username"
            class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-500"
          />
        </div>

        <!-- Password Area -->
        <div class="mt-4">
          <label for="password" class="block text-base mb-2">Password:</label>
          <br />
          <input
            id="password"
            type="password"
            placeholder="Password"
            class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-500"
          />
        </div>

        <!-- Submit Button -->
        <div class="mt-4">
          <button
            onClick="login()"
            type="submit"
            class="bg-slate-700 text-zinc-300 w-full border-2 border-slate-700 rounded-lg hover:bg-transparent hover:font-extrabold hover:text-slate-700"
          >
            Login
          </button>
        </div>
        <div class=" mt-3 text-right">
          <a class="text-slate-700 px-2 hover:bg-slate-700 hover:text-zinc-300 hover:rounded-lg hover:border-2" aria-current="page" href="/signup">Sign Up</a>
        </div>
      </form>
    </div>
    <div role="alert">
      <div class="bg-red-500 text-white font-bold rounded-t px-4 py-2">
        Danger
      </div>
      <div id="errorBox" class="alert alert-danger d-none">Sorry! Your login was
        invalid!
      </div>
    </div>
  </div>

  <script src="javascript/index.js"></script>
</div>